generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  rootFolderPath String
  Folder         Folder[]
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  path      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  File      File[]
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  path      String
  size      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  folder    Folder   @relation(fields: [folderId], references: [id])
  folderId  Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.VarChar(255)
  expiresAt DateTime
}
