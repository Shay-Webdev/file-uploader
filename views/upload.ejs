<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('header') %>
    <main class="main upload-main">
      <h1><%= welcomeMessage %></h1>
      <p><%= description %></p>
      <% if (locals.error && locals.error.length > 0) { %>
      <ul class="error-messages">
        <% locals.error.forEach(err => { %>
        <li><%= err.msg %></li>
        <% }); %>
      </ul>
      <% } %>
      <form id="uploadForm" enctype="multipart/form-data" method="POST">
        <label for="folder">Select Folder:</label>
        <select id="folder" name="folder" onchange="updateFormAction()">
          <option value="">-- Select a folder --</option>
          <% locals.folders.forEach(folder => { %>
          <option value="<%= folder.id %>"><%= folder.name %></option>
          <% }); %>
        </select>
        <label for="file">Choose File:</label>
        <input type="file" id="file" name="file" required />
        <button type="submit">Upload</button>
      </form>
    </main>
    <%- include('footer') %>
    <script>
      function updateFormAction() {
        const folderId = document.getElementById('folder').value;
        const form = document.getElementById('uploadForm');
        form.action = folderId ? `/upload/${folderId}` : '/upload';
      }
    </script>
  </body>
</html>
